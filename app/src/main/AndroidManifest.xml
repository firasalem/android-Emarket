<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.khaireddine.e_market">

    <permission android:name="com.example.khaireddine.e_market.PERMISSION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Produits" />
        <activity android:name=".Connect" />
        <activity android:name=".CreateAccount" />

        <provider
            android:name=".UserListContentProvider"
            android:authorities="com.example.khaireddine.e_market.provider"
            android:exported="true"></provider>

        <activity android:name=".Panier"></activity>
    </application>

</manifest>